{
  "name": "atom-rampcode",
  "main": "./lib/atom-rampcode",
  "version": "0.4.2",
  "description": "Rampcode on Atom.",
  "keywords": [
    "livecoding",
    "puredata"
  ],
  "repository": "https://github.com/pndmix/atom-rampcode",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationCommands": {
    "atom-workspace": "atom-rampcode:toggle"
  },
  "dependencies": {
    "atom-message-panel": "^1.3.1",
    "atom-package-deps": "^5.1.0"
  },
  "package-deps": [
    "language-rampcode"
  ],
  "devDependencies": {
    "@types/atom": "^1.40.4",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint src/**/*.ts && prettier -c **/*.{ts,less,json,yml}",
    "format": "eslint --fix src/**/*.ts && prettier --write **/*.{ts,less,json,yml}"
  }
}
